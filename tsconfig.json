{
  "compilerOptions": {
    "module": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*", "worker.mjs"],
  "exclude": ["src/__mocks__", "**/*.test.*", "src/__tests__", "src/interfaces"]
}
